<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutChangePasswordContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_15sdp">

    <ImageView
        android:id="@+id/passwordIcon"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_password"
        app:tint="@color/colorWhite"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="@id/layoutChangePasswordContainer"
        app:layout_constraintStart_toStartOf="@id/layoutChangePasswordContainer" />

    <TextView
        android:id="@+id/textChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_13sdp"
        android:padding="@dimen/_8sdp"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="@id/passwordIcon"
        app:layout_constraintStart_toStartOf="@id/layoutChangePasswordContainer"
        android:includeFontPadding="false" />

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:hint="Username"
        android:padding="@dimen/_8sdp"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorWhite"
        android:textColorHint="@color/colorIcons"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/textChangePassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editNewPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:hint="New Password"
        android:padding="@dimen/_8sdp"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorWhite"
        android:textColorHint="@color/colorIcons"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/editUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textSave"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:padding="@dimen/_8sdp"
        android:textColor="@color/colorNoteColor2"
        android:textSize="@dimen/_16sdp"
        android:fontFamily="@font/ubuntu_bold"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        app:layout_constraintTop_toBottomOf="@id/editNewPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textCancel"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:padding="@dimen/_8sdp"
        android:textColor="@color/colorNoteColor2"
        android:textSize="@dimen/_16sdp"
        android:fontFamily="@font/ubuntu_bold"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        app:layout_constraintTop_toBottomOf="@id/editNewPassword"
        app:layout_constraintStart_toEndOf="@id/textSave"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
